
    <h2 class="modal-title">Detail Factures par Année  :</h2>

<hr />

<div class="table-responsive " data-pattern="priority-columns">
    <table cellspacing="0"  id="DetFacture" class="table table-small-font table-bordered ">
        <thead>

            <tr class="bg-primary">
                <th data-priority="3"><center>Contrat</center></th>
                <th data-priority="1">Nom Adherent</th>
                <th data-priority="1"><center>Année</center></th>
                <th data-priority="1"><center>Total des Factures</center></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Detail_Facture)
            {
               
                    <tr data-annne="@item.Annee">

                        <td>
                            @item.REF_CTR_DET_BORD
                        </td>
                        <td>
                            @item.NOM_IND
                        </td>
                        <td>
                            @item.Annee
                        </td>

                        <td style="text-align:right">
                            @String.Format("{0:N3}", item.Somme_Facture)
                        </td>
<td><a  href="/Financement/DetaileFactureParAn/@item.REF_CTR_DET_BORD/@item.Annee" class="btn btn-primary" target="popup" 
  onclick="window.open('/Financement/DetaileFactureParAn/@item.REF_CTR_DET_BORD/@item.Annee', 'popup', 'width=600,height=600'); return false;">
  <i class="fa fa-fw fa-eye"></i></a></td>


                    </tr>
                
            }
        </tbody>
    </table>
    </div>


