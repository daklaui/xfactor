
    <h2 class="modal-title">Détails Encaissements  :</h2>

<hr />
<div class="table-responsive " data-pattern="priority-columns">
    <table cellspacing="0" id="DetCheque" class="table table-small-font table-bordered">
        <thead>

            <tr class="bg-primary">
                <th data-priority="3"><center>Reference</center></th>
                <th data-priority="1">Montant</th>
                <th data-priority="1">Type</th>
                <th data-priority="1"><center>Date Réception</center></th>
                <th data-priority="1"><center>Date Valeur</center></th>
                <th data-priority="1"><center>#</center></th>
            </tr>

        </thead>
        <tbody>
@foreach (var item in ViewBag.enc)
{
            <tr>

                <td>
                    @item.REF_ENC
                </td>
                <td style="text-align:right">
                    @String.Format("{0:N3}", item.MONT_ENC)
                </td>

                <td style="text-align:right">
                  @item.TYP_ENC
                </td>


    @if (item.DAT_RECEP_ENC != null)
    {
        <td>
            @item.DAT_RECEP_ENC.ToString("d")
        </td>
    }
    else
    {
        <td>
            @item.DAT_RECEP_ENC
        </td>
    }

    @if (item.DAT_VAL_ENC != null)
    {
        <td>
            @item.DAT_VAL_ENC.ToString("d")
        </td>
    }
    else
    {
        <td>
            @item.DAT_VAL_ENC
        </td>
    }

                @if (item.ADRESS_DOC_GED == "" || item.ADRESS_DOC_GED == null)
                {
                    <td></td>
                }
                else
                {
                    <td>
                        <a href="@item.ADRESS_DOC_GED" target="_blank"><i class="fa fa-fw fa-unlink"></i></a>
                    </td>
                }

            </tr>
}
        </tbody>
    </table>
</div>

