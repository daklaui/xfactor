
@model xfactor.Models.TS_USER
<form action="/User/AddUserPartial" method="post" enctype="multipart/form-data" id="myForm">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-3">
                <div align="center">
                  
                    <input name="ImageFile" type="file" >

                    <!--Upload Image Js And Css-->

                </div>

                <br>

                <!-- /input-group -->

                <h4 style="color:#00b1b1;"></h4>
                <span><p></p></span>
            </div>

            <div class="col-lg-9">

                <div class="table-responsive col-md-12">
                    <table id="sort2" class="grid table table-bordered table-sortable">

                        <tbody>

                            <tr class="form-group">
                                <td><b>Nom</b> </td>
                                <td> @Html.TextBoxFor(m => m.NOM_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td><b>Prenom</b> </td>
                                <td>@Html.TextBoxFor(m => m.PRE_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td><b>Login</b> </td>
                                <td>@Html.TextBoxFor(m => m.LOGIN_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td><b>Mot de Passe</b>  </td>
                                <td>@Html.TextBoxFor(m => m.MDP_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td><b>Actif / Bloque</b> </td>
                                <td>
                                    @Html.CheckBoxFor(m => m.ACTIF_USER)
                                </td>
                            </tr>

                           <tr>
                                <td><b>Groupes Utlisateurs </b></td>
                                <td>
                                    @Html.DropDownList("ID_GRP_USER", (IEnumerable<SelectListItem>)ViewBag.listGroupUser, new { @class = "form-control" })
                                </td>
                            </tr>

                            <tr class="form-group">
                                <td><b>Email</b> </td>
                                <td>@Html.TextBoxFor(m => m.MAIL_USER, new { @class = "form-control" })</td>
                            </tr>

                            <tr class="form-group">
                                <td> <b>Agence</b> </td>
                                <td>@Html.TextBoxFor(m => m.AGENCE_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td> <b>Direction</b> </td>
                                <td>@Html.TextBoxFor(m => m.DIRECTION_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td><b>Fix</b> </td>
                                <td>@Html.TextBoxFor(m => m.TEL_FIXE_USER, new { @class = "form-control" })</td>
                            </tr>
                            <tr class="form-group">
                                <td><b>Mobile</b> </td>
                                <td>@Html.TextBoxFor(m => m.MOBILE_USER, new { @class = "form-control" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>


            </div>
            <!-- /.box-body -->
        </div>
    </div>
    <button type="submit" id="" class="btn btn-primary">Ajouter</button>
</form>

<script src="~/Content/js/plugins/jquery.validate.min.js"></script>
<script src="~/Content/localization/messages_fr.js"></script>
<script>
    $("#myForm").validate({
        rules: {
            // compound rule
            NOM_USER: {
                required: true,
            },
            PRE_USER: {
                required: true,
            },
            LOGIN_USER: {
                required: true,
            },
            MDP_USER: {
                required: true,
            },
            ID_GRP_USER: {
                required: true,
            },
            
        },
        //messages: {
        //    Code_Section: "ce champs est obligatoire ",
        //    Section: "ce champs est obligatoire",
        //    Code_SousSection: "ce champs est obligatoire",
        //    SousSection: "ce champs est obligatoire",
        //    Code_Activité: "ce champs est obligatoire",
        //    Code_Classe: "ce champs est obligatoire",
        //    Classe: "ce champs est obligatoire",
        //    Code_SousClasse: "ce champs est obligatoire",
        //    SousClasse: "ce champs est obligatoire"
        //},
        highlight: function (element) {
            $(element).closest('.form-group').addClass('has-error');
        },
        unhighlight: function (element) {
            $(element).closest('.form-group').removeClass('has-error').addClass('has-success');
        }


    });
</script>