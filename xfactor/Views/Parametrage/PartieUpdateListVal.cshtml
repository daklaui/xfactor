@model xfactor.Models.TR_LIST_VAL

@using (Html.BeginForm("PartieUpdateListVal", "Parametrage",new { id = "formupdatelistval" }))
{
    @Html.AntiForgeryToken()
    

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_LIST_VAL)

    <div class="form-group">
        @Html.Label("Abréviation", htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.ABR_LIST_VAL, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ABR_LIST_VAL, "", new { @class = "text-danger" })
    </div>

        <div class="form-group">
            @Html.Label("Type", htmlAttributes: new { @class = "control-label" })
            <input type="text" name="TYP_LIST_VAL" class="form-control" value="Statut_Contrat" readonly />
            @Html.ValidationMessageFor(model => model.TYP_LIST_VAL, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Ordre", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ORD_LIST_VAL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ORD_LIST_VAL, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Libellé", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.LIB_LIST_VAL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LIB_LIST_VAL, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Commantaire", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.COM_LIST_VAL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.COM_LIST_VAL, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modifier" class="btn btn-primary pull-right" />
            </div>
        </div>

}

<script src="~/Content/js/plugins/jquery.validate.min.js"></script>
<script src="~/Content/localization/messages_fr.js"></script>
<script>
    $("#formupdatelistval").validate({
        rules: {
            // compound rule
            ABR_LIST_VAL: {
                required: true
            },
            ORD_LIST_VAL: {
                required: true,
            },
            LIB_LIST_VAL : {
                required: true,
            },
            COM_LIST_VAL: {
                required: true,
            }

        },

        highlight: function (element) {
            $(element).closest('.form-group').addClass('has-error');
        },
        unhighlight: function (element) {
            $(element).closest('.form-group').removeClass('has-error').addClass('has-success');
        }


    });
</script>
