@model xfactor.Models.T_CONTACT

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_CONTACT)
    @Html.HiddenFor(model => model.REF_IND_CONTACT)
        <div class="form-group">
            @Html.Label("Nom et prénom :" ,htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.NOM_PRE_CONTACT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOM_PRE_CONTACT, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.Label("Poste", htmlAttributes: new { @class = "control-label" })
                
       
            <select class="form-control" id="" name="POS_CONTACT">
                @foreach (var item in ViewBag.ListePoste)
                {
                    string x=item.Value.Trim();
                    if (Model.POS_CONTACT.Trim() == x)
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>

        </div>

        <div class="form-group">

            @Html.Label("Téléphone :", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TEL1_CONTACT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEL1_CONTACT, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Email : ", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.MAIL1_COONTACT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MAIL1_COONTACT, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Fax :", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.FAX_CONTACT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FAX_CONTACT, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Situation:", htmlAttributes: new { @class = "control-label" })
                    @Html.CheckBoxFor(model => model.ACTIF_CONTACT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ACTIF_CONTACT, "", new { @class = "text-danger" })
        </div>

      
        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" value="modifer" class="btn btn-primary pull-left" />
            </div>
        </div>

}

