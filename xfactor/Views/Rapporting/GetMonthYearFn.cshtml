                                        <td data-title="Annee">
                                            @item.annee
                                        </td>
                                        <td data-title="Annee">
                                            <a href="/Rapporting/Extrait_Compte_par_mois/@TempData["ref_ctr"]/@item.mois/@item.annee" class="btn btn-success btn-sm"><i class="fa fa-cloud-download"></i> Télécharger</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


