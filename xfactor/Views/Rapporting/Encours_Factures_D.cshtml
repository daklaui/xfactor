
@{
    ViewBag.Title = "Encours_Factures_D";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">

    <div class="col-md-12">
        <div class="box box-info boxx">
            <div class="box-header with-border bg-info">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <div class="col-lg-6">

                        @Html.Label("Date Fin:", htmlAttributes: new { @class = "control-label" })
                         <input type="date" class="form-control input-sm" id="date_fin" />
                         <button type="button" id="btn_cherche" class="btn btn-success btn-sm">Chercher</button>
                    </div>
                  

                    @*<div class="col-lg-6">
                        @Html.Label("Nom Acheteur:", htmlAttributes: new { @class = "control-label" })
                        <p id="Nom_Ach"></p>
                    </div>*@
                </div>
                <div class="col-lg-2"></div>


            </div>
            <div class="box-body">
                <div id="Encours_Par_Date"></div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <div id="loding_partie" class="loader">
                    <div class="loader-inner">
                        <div class="loading one"></div>
                    </div>
                    <div class="loader-inner">
                        <div class="loading two"></div>
                    </div>
                    <div class="loader-inner">
                        <div class="loading three"></div>
                    </div>
                    <div class="loader-inner">
                        <div class="loading four"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/plugins/jquery/jquery-3.3.1.js"></script>

<script>
    $("#btn_cherche").click(function () {
        $('#exampleModal').modal('show');
        if ($("#date_fin").val() != "") {
            var url = "/Rapporting/Encours_Factures_Detail/" +$("#date_fin").val();
            $("#Encours_Par_Date").load(url, function () {
                $('#exampleModal').modal('hide');
            });
        }
        else { $('#exampleModal').modal('hide'); }
    
    });



   


    

</script>





