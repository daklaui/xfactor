
@{
    ViewBag.Title = "ResolutionLitiges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
      tbody > tr:hover, tbody > tr.selected {
        background-color: dodgerblue;
        color: white;
        cursor: pointer;
        -webkit-box-shadow: 0 0 5px 2px rgba(0, 0, 0, .5);
        box-shadow: 0 0 5px 2px rgba(0, 0, 0, .5);
        border-radius: 5px;
    }
</style>

@section header {

    <h1>
        Litiges et Prorogations

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li class="active">Litiges et Prorogations</li>
        <li class="active">Resolution Litigie</li>
    </ol>
}


@if (TempData["notice"] != null)
{
    <div class="alert alert-success alert-dismissible fade in" id="success-alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong> @TempData["notice"] !</strong>
    </div>
}
  
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive " data-pattern="priority-columns">
            <table cellspacing="0" id="ListeFacturesLitiges" class="table table-small-font table-bordered ">
                <thead>
                    <tr class="bg-primary">
                        <th data-priority="3"><center>Nom Adhérent</center></th>
                        <th data-priority="1">Type</th>
                        <th data-priority="1"><center>Référence</center></th>
                        <th data-priority="1"><center>Montant Ouvert</center></th>
                        <th data-priority="1"><center>ÉCHÉANCE Litige</center></th>
                        <th data-priority="1"><center> Montant Litige</center></th>
                        <th data-priority="1"><center> #</center></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.lit)
                    {
                        <tr>
                            <td>@item.NOM_IND</td>
                            <td>@item.TYP_DET_BORD</td>
                            <td>@item.ID_DET_BORD</td>
                            <td style="text-align:right">
                                @String.Format("{0:N3}", item.MONT_OUV_DET_BORD)
                            </td>
                          @if (item.ECH_LIT != null)
                          {
                            <td>@item.ECH_LIT.ToString("d")</td>
                          }
                          else
                          {
                            <td>@item.ECH_LIT</td>
                          }
                           

                            <td style="text-align:right">
                                @String.Format("{0:N3}", item.MONT_LT)
                            </td>
                         
                            <td><a href="/LitigesEtProrogations/Resolu/@item.ID_LITIGE" class="btn btn-success"><i class="fa fa-fw fa-thumbs-up"></i></a></td>


                        </tr>


                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

