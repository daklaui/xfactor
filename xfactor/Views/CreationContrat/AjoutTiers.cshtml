
@{
    ViewBag.Title = "AjoutTiers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header {

<h1>
    Ajout Tiers

</h1>
<ol class="breadcrumb">
    <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Accueil</a></li>
    <li class="active"> Ajout Tiers</li>
</ol>
    }
@if (TempData["notice"] != null)
{
    <div class="alert alert-success alert-dismissible fade in" id="success-alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong> @TempData["notice"] !</strong>
    </div>
}



<div class="row">
    <div class="col-lg-12">
        <form method="post" action="/creationContrat/AjoutTiers">
            <div class="col-lg-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                    </div>

                    <div class="box-body">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="control-label">Nom Adhérent :</label>
                                    <select class="form-control input-sm selectpicker" data-live-search="true" name="REF_CTR_CIR">
                                        <option value="0">-- choisir nom --</option>
                                        @foreach (var resulta in ViewBag.ADH)
                                        {
                                            <option value="@resulta.a">@resulta.b</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Nom Individu:", htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownList("REF_IND_CIR", (IEnumerable<SelectListItem>)ViewBag.ListeInd, new { @class = "form-control input-sm selectpicker", data_live_search = "true", id = "" })
                                    @Html.ValidationMessage("REF_IND_CIR", "", new { @class = "text-danger" })
                                </div>

                                <button type="submit" id="" class="btn btn-primary btn btn-block">
                                    Enregistrer
                                </button>


                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </form>
    </div>

</div>
