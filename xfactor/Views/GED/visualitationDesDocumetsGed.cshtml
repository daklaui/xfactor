@using xfactor.Models
@{
    ViewBag.Title = "visualitationDesDocumetsGed";
    Layout = "~/Views/Shared/_Layout.cshtml";
      XFactor_PRODEntities1 db = new XFactor_PRODEntities1();
}

@section header {

    <h1>
        Gestion des documents

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li class="active">GED</li>
        <li class="active">Visualisation des documents </li>
    </ol>
}
<style>
    .colo {
    color:black;
    }
</style>
<div class="row">
    <div class="col-lg-12">

        <div class="col-md-4">
            
        </div>

        <div class="box box-primary box-solid">
            <div class="box-header with-border">
           
                    <div class="form-group">
                        <label class="control-label">Nom Adhérent :</label>
                        <select class="form-control input-sm selectpicker bg-black" id="test" data-live-search="true" name="REFCTR">
                            <option style="color:black" value="" disabled selected>-- choisir nom --</option>

                            @foreach (var resulta in ViewBag.ListNomInd)
                            {
                                <option style="color:black" value="@resulta.REF_CTR_CIR"><b>@resulta.NomAdh|@resulta.REF_CTR_CIR</b></option>
                            }

                        </select>

                    </div>


                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body" id="listeGEd" style="">
               
            </div>
            <!-- /.box-body -->
        </div>



    </div>


</div>

            <!-- Modal -->
            <div id="exampleModal1" class="modal fade" style="" role="dialog">
                <div class="modal-dialog"   role="document" style="overflow-y: initial !important">

                    <!-- Modal content-->
                    <div class="modal-content">
                        
                        <div class="modal-body" style="height: 450px;overflow-y: auto;" id="AddVal">

                        </div>
                      
                    </div>

                </div>
            </div>

        <div class="modal fade" id="exampleModal2" role="dialog" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModal2" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-body">
                        <div id="loding_partie" class="loader">
                            <div class="loader-inner">
                                <div class="loading one"></div>
                            </div>
                            <div class="loader-inner">
                                <div class="loading two"></div>
                            </div>
                            <div class="loader-inner">
                                <div class="loading three"></div>
                            </div>
                            <div class="loader-inner">
                                <div class="loading four"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


<div class="modal-body" style="display:none" id="loaderin">
    <div class="modal-content">
        <div class="modal-body">
            <div id="loding_partie" class="loader">
                <div class="loader-inner">
                    <div class="loading one"></div>
                </div>
                <div class="loader-inner">
                    <div class="loading two"></div>
                </div>
                <div class="loader-inner">
                    <div class="loading three"></div>
                </div>
                <div class="loader-inner">
                    <div class="loading four"></div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Content/js/plugins/jquery/jquery-3.3.1.js"></script>
<script>

    $("#test").change(function () {
        $("#exampleModal2").modal();
        var url = "/GED/ListeDesDocGed/" + $("#test").val();
        $("#listeGEd").load(url, function () {
            $("#exampleModal2").modal('hide');
        });
    });

    $(".box-body a").click(function () {
    //    $("#exampleModal2").modal();
        //  alert($(this).data("ref_ctr"));
  
        var x = $(this).data("lib").replace(/\s/g, "");
        var url = "/GED/ListeOfLibs/" + $(this).data("ref_ctr") + "/" + x;
        $("#AddVal").load(url, function () {
          //  $("#exampleModal2").modal('hide');
            $("#exampleModal1").modal();
        });
    });
</script>


